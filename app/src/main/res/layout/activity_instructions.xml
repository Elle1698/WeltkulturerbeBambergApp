<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp"
    tools:context="com.github.weltkulturschnitzelbamberg.weltkulturerbebambergapp.InstructionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_instruc_title"
        android:text="@string/tv_instruc_title"
        android:layout_below="@+id/instruc_toolbar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_instruc_instructions"
        android:text="@string/tv_instruc_instructions"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_instruc_short_route"
        android:text="@string/btn_instruc_short_route"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tv_instruc_title"
        android:layout_toStartOf="@+id/tv_instruc_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_instruc_long_route"
        android:text="@string/btn_instruc_long_route"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tv_instruc_title"
        android:layout_toEndOf="@+id/tv_instruc_title" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/instruc_toolbar"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_width="match_parent"
        android:minHeight="@dimen/abc_action_bar_default_height_material"
        android:background="?attr/colorPrimary"

        />
</RelativeLayout>
